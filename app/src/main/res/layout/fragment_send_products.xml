<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SendProducts">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_send_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sipariş Sepeti"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        />
    <ListView
        android:id="@+id/lv_send_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></ListView>
    <Button
        android:id="@+id/btn_send_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siparişi Gönder"
        android:background="@drawable/round_back_primary_15"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_send_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapat"
        android:background="@drawable/round_back_primary_cancel"
        android:layout_weight="0"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        />

</LinearLayout>

</FrameLayout>